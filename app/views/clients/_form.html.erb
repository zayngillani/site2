<%= form_with(model: client) do |form| %>
  <% if client.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(client.errors.count, "error") %> prohibited this client from being saved:</h2>

      <ul>
        <% client.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name %>
    <%= form.text_field :name,class: 'form-control' %>
  </div>

  <div>
    <%= form.label :email, style: "display: block" %>
    <%= form.text_field :email, class: 'form-control' %>
  </div>

  <div>
    <%= form.label :profession, style: "display: block" %>
    <%= select_tag 'client[profession]', options_for_select(@professions.collect{ |c| [c[0], c[1]] }, @client.professions.ids), class: 'selectize', id:"client_profession", required: 'required', multiple: true %>
  </div>

  <div>
    <br>
    <%= form.submit 'Save', class: 'btn btn-success' %>
  </div>
<% end %>

<script>
    $("#client_profession").selectize({
        plugins: ["remove_button"],
        maxItems: 3,
    });
</script>